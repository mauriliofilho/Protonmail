{
  "name": "protonmail-desktop",
  "productName": "Protonmail Desktop",
  "description": "Unofficial electron wrapper for Protonmail",
  "version": "0.5.1",
  "author": {
    "name": "Matthew Core <matcore@protonmail.com>",
    "email": "matcore@protonmail.com"
  },
  "copyright": "Â© 2016, M. Core <BeatPlus>.",
  "homepage": "http://beatplus.github.io/Protonmail/",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.beatplus.pronmail-desktop",
    "linux": {
      "target": "deb"
    },
    "win": {
      "icon": "build/Icon.ico"
    },
    "files": [
      "app/**/*",
      "app/static/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "release-local": "build -p=never",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "dragula": "^3.7.2",
    "electron-config": "^1.0.0",
    "electron-context-menu": "^0.9.1",
    "electron-context-menu-handler": "^1.0.3",
    "electron-debug": "^1.1.0",
    "electron-dl": "^1.9.0",
    "electron-tabs": "^0.7.0",
    "fs-jetpack": "^0.13.0",
    "gulp-sass": "^3.1.0",
    "minimist": "^1.2.0",
    "open": "0.0.5",
    "sweetalert": "^1.1.3"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "electron": "^1.6.2",
    "electron-builder": "^17.3.1",
    "electron-mocha": "^4.0.0",
    "electron-reload": "^1.1.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "minimist": "^1.2.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "rollup": "^0.41.4",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.14",
    "spectron": "^3.7.2"
  }
}
